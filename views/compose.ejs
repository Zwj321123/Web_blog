<%- include('partials/header'); %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="Title" class="form-label">Title</label><br>
        <input type="text" id="Title" name="postTitle">
    </div>
    <div class="mb-3">
        <label for="Post" class="form-label">Post</label><br>
        <textarea id="Post" name="postBody" rows="8" cols="50"></textarea><br><br>
    </div>
    <button class="btn btn-primary" type="submit" name="button" value="Submit">Publish</button>
</form>
<%- include('partials/footer'); %>